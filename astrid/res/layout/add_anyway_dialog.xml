<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" 
android:orientation="vertical" android:layout_width="fill_parent" 
android:layout_height="fill_parent" android:paddingLeft="10dip" 
android:paddingRight="10dip"> 
	<TextView android:layout_width="wrap_content" android:id="@+id/mail_not_using"
	android:layout_height="wrap_content" android:text="It seems that your friend is not using Aroundroid. Would you like to add him anyway?" /> 
	<LinearLayout android:orientation="horizontal" 
	android:layout_width="fill_parent" android:layout_height="wrap_content" 
	android:paddingTop="15dip"> 
		<CheckBox android:id="@+id/mail_checkbox" android:layout_width="wrap_content"
		android:layout_gravity="right" 
		android:layout_height="wrap_content" />
		<TextView android:id="@+id/mail_text" android:layout_width="wrap_content" 
		android:layout_height="wrap_content" android:text="Send e-mail invitation(recommended)" android:layout_gravity="center" />  
	</LinearLayout> 
	<LinearLayout android:orientation="horizontal" 
	android:layout_width="fill_parent" android:layout_height="wrap_content" 
	android:paddingTop="15dip"> 
		<Button android:id="@+id/add_anyway_button" android:layout_width="fill_parent" 
		android:layout_height="fill_parent" android:text="Add Friend"  android:layout_weight="1"/> 
		
		<Button android:id="@+id/cancel_anyway_button" android:layout_width="fill_parent" 
		android:layout_height="fill_parent" android:text="Cancel" android:layout_weight="1"/> 
	</LinearLayout> 
</LinearLayout> 